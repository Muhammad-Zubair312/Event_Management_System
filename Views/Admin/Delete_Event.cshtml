@model List<Event_Management_System.Models.Add_Event>;
@{
    ViewBag.Title = "Delete Event";
}

<h2 class="text-center mb-4 text-danger">Delete Event</h2>

<div class="container w-50 mx-auto p-4 border rounded shadow bg-white">
    <form method="post" action="/Admin/Delete">
        <div class="mb-3">
            <label class="form-label fw-bold">Select Event to Delete</label>
            <select name="EventToDelete" class="form-select" required>
                <option value="">-- Choose Event --</option>

                @foreach (var item in Model) {
                    <option value="@item.Id">@item.Eventname</option>
                }
               </select>
        </div>

        <button type="submit" class="btn btn-danger w-100">Delete Event</button>
    </form>
</div>
