@model List<Event_Management_System.Models.Add_Event>
    @{ 
     ViewBag.Title = "Explore Events"; 
 } 

 <h2 class="text-center mb-4 text-primary fw-bold">Discover Exciting Events</h2> 


 <div class="container w-75 mx-auto p-4 border rounded shadow bg-white">

     <div id="Add"></div>

    <div id="Update"></div>
    
    <div id="Delete"></div>

    @foreach(var obj in Model){ 

     <div class="event-card p-3 mb-4 border-left border-primary border-4 shadow-sm"> 
         <h4 class="fw-bold text-dark">@obj.Eventname</h4> 
            <p><i class="bi bi-person-fill"></i> <strong>Organized By</strong>: @obj.Name</p> 
         <p><i class="bi bi-calendar-event"></i> <strong>Date:</strong> @obj.Date</p>
         <p><i class="bi bi-clock"></i> <strong>Time:</strong> @obj.Time</p> 
         <p><i class="bi bi-geo-alt"></i> <strong>Venue:</strong> @obj.Venue</p> 
         <p class="text-danger fw-bold"><i class="bi bi-exclamation-circle"></i> Notice: @obj.Note</p> 
         <a href="/User/Book?eventname=@obj.Eventname" class="btn btn-success mt-2"> 
            <i class="bi bi-ticket-detailed"></i> Book Ticket  </a> 
     </div> 

 } 

 </div>


