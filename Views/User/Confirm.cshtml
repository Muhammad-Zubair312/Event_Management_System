@{
    ViewBag.Title = "Confirmation Page";
}

<div class="container mt-5">
    <div class="alert alert-success shadow-lg text-center p-5 rounded-4" role="alert">
        <i class="bi bi-check-circle-fill fs-1 text-success"></i>
        <h2 class="mt-3 fw-bold">🎉 Success Message!</h2>

        @if (ViewBag.Message != null)
        {
            <p class="lead mt-3">@ViewBag.Message</p>
        }

    </div>

    <div class="mt-4">
        <a href="/User/User_Dashboard" class="btn btn-success w-100 mb-2">User Dashboard</a>

    </div>
</div>


